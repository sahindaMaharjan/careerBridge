@model IEnumerable<careerBridge.Models.JobListing>

@{
    ViewData["Title"] = "Available Jobs";
}

<h2 class="mb-4">Available Job Listings</h2>

@if (!Model.Any())
{
    <p>No jobs available at the moment.</p>
}
else
{
    <div class="row row-cols-1 row-cols-md-2 g-4">
        @foreach (var job in Model)
        {
            <div class="col">
                <div class="card shadow-sm h-100">
                    <div class="card-body">
                        <h5 class="card-title">@job.Title</h5>
                        <p class="card-text">@job.Description</p>
                        <p class="card-text">
                            <small class="text-muted">Employer: @job.Employer</small><br />
                            <small class="text-muted">Posted on: @job.PostedOn.ToShortDateString()</small>
                        </p>
                        <a asp-action="Apply" asp-route-id="@job.JobListingID" class="btn btn-primary">Apply Now</a>
                    </div>
                </div>
            </div>
        }
    </div>
}
