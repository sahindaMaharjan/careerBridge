@{
    ViewData["Title"] = "Job Posted!";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <div class="alert alert-success text-center">
        <h4 class="alert-heading">Success!</h4>
        <p>Your job has been posted.</p>
        <hr />
        <a asp-controller="Employer" asp-action="Index" class="btn btn-primary me-2">
            Back to Dashboard
        </a>
        <a asp-controller="Employer" asp-action="PostJob" class="btn btn-secondary">
            Post Another Job
        </a>
    </div>
</div>
