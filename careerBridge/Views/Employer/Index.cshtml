@model careerBridge.Models.EmployerDashboardViewModel

@{
    ViewData["Title"] = "Employer Dashboard";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link href="https://cdn.jsdelivr.net/npm/bootswatch@5.3.0/dist/flatly/bootstrap.min.css" rel="stylesheet" />

<div class="container mt-5">

    <!-- Stats Cards -->
    <div class="row mb-4 text-white">
        <div class="col-md-4">
            <div class="card bg-info text-center">
                <div class="card-body">
                    <h5 class="card-title">Jobs Posted</h5>
                    <p class="display-6">@Model.JobCount</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card bg-secondary text-center">
                <div class="card-body">
                    <h5 class="card-title">Chats</h5>
                    <p class="display-6">@Model.ChatCount</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card bg-warning text-center">
                <div class="card-body">
                    <h5 class="card-title">Events Posted</h5>
                    <p class="display-6">@Model.EventCount</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Quick Actions -->
    <div class="row mb-5">
        <div class="col text-end">
            <a asp-controller="Employer" asp-action="Index" class="btn btn-lg btn-primary me-2">
                <i class="bi bi-plus-circle"></i> Post New Job
            </a>
            <a asp-controller="Chat" asp-action="Index" class="btn btn-lg btn-secondary me-2">
                <i class="bi bi-chat-dots"></i> Chat with Students
            </a>
            <a asp-controller="Event" asp-action="Index" class="btn btn-lg btn-warning">
                <i class="bi bi-calendar-plus"></i> Post Event
            </a>
        </div>
    </div>

    <!-- Job Listings -->
    <div class="row mb-4">
        <div class="col">
            <h3>Your Job Listings</h3>
            <table class="table table-hover mt-3">
                <thead class="table-light">
                    <tr><th>Title</th><th>Posted On</th><th>Applicants</th><th>Status</th><th></th></tr>
                </thead>
                <tbody>
                    @foreach (var job in Model.Jobs)
                    {
                        <tr>
                            <td>@job.Title</td>
                            <td>@job.PostedOn:MMM d, yyyy</td>
                            <td>@job.ApplicantCount</td>
                            <td><span class="badge @(job.IsOpen?"bg-primary":"bg-secondary")">@(job.IsOpen ? "Open" : "Closed")</span></td>
                            <td>
                                <a asp-action="Details" asp-controller="Job" asp-route-id="@job.Id" class="btn btn-sm btn-outline-secondary">View</a>
                                @if (job.IsOpen)
                                {
                                    <a asp-action="Edit" asp-controller="Job" asp-route-id="@job.Id" class="btn btn-sm btn-outline-success ms-1">Edit</a>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

    <!-- Event Listings -->
    <div class="row mb-4">
        <div class="col">
            <h3>Your Events</h3>
            <table class="table table-hover mt-3">
                <thead class="table-light">
                    <tr><th>Event</th><th>Date</th><th>Registrations</th><th></th></tr>
                </thead>
                <tbody>
                    @foreach (var ev in Model.Events)
                    {
                        <tr>
                            <td>@ev.Name</td>
                            <td>@ev.Date:MMM d, yyyy</td>
                            <td>@ev.RegistrationCount</td>
                            <td><a asp-action="Details" asp-controller="Event" asp-route-id="@ev.Id" class="btn btn-sm btn-outline-secondary">View</a></td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

    <!-- Recent Chats -->
    <div class="row mb-5">
        <div class="col">
            <h3>Recent Chats</h3>
            <div class="list-group mt-3">
                @foreach (var chat in Model.RecentChats)
                {
                    <div class="list-group-item d-flex justify-content-between align-items-center">
                        <div><h5 class="mb-1">@chat.StudentName</h5><p class="mb-1">“@chat.LastMessageSnippet…”</p><small class="text-muted">@chat.LastMessageTime:g</small></div>
                        <a asp-action="Conversation" asp-controller="Chat" asp-route-withUser="@chat.StudentId" class="btn btn-sm btn-outline-primary">Continue →</a>
                    </div>
                }
            </div>
        </div>
    </div>

</div>