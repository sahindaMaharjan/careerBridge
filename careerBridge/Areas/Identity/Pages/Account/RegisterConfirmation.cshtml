@page
@model RegisterConfirmationModel
@{
    ViewData["Title"] = "Registration Confirmation";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card shadow-sm border-0">
                <div class="card-body p-4">
                    <h3 class="card-title text-center text-primary fw-bold mb-3">Thank You for Registering!</h3>

                    @if (Model.DisplayConfirmAccountLink)
                    {
                        <div class="alert alert-info text-center mb-4" role="alert">
                            A confirmation email has been sent to your registered address.<br />
                            Please check your inbox and follow the instructions to complete your registration.
                        </div>

                        <div class="text-center">
                            <p class="fw-semibold text-muted">Development Mode: Confirm directly using the link below:</p>
                            <a class="btn btn-primary px-4 mt-2" href="@Model.EmailConfirmationUrl">Confirm Email</a>
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-success text-center mb-4" role="alert">
                            Please check your inbox to verify your email address. If you don’t receive an email within a few minutes, check your spam or junk folder.
                        </div>
                    }

                    <p class="text-center mt-4 text-muted">
                        Still having trouble? <a href="/Support" class="text-decoration-none">Contact Support</a>
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>
