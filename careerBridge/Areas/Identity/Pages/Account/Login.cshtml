@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<style>
    body {
        background: url('/img/background.png') no-repeat center center fixed;
        background-size: cover;
        font-family: 'Segoe UI', sans-serif;
        margin: 0;
        padding: 0;
    }

    .login-container {
        display: flex;
        min-height: 100vh;
        align-items: center;
        justify-content: center;
    }

    .login-box {
        display: flex;
        background: #fff;
        border-radius: 15px;
        box-shadow: 0 8px 30px rgba(0, 0, 0, 0.1);
        overflow: hidden;
        width: 900px;
        max-width: 100%;
    }

    .login-image {
        flex: 1;
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 0;
    }

        .login-image img {
            width: 100%;
            height: 100%;
            object-fit: cover;
        }

    .login-form {
        flex: 1;
        background: #007bff;
        color: white;
        padding: 3rem 2rem;
    }

        .login-form h2 {
            font-weight: 700;
            margin-bottom: 2rem;
        }

    .form-group {
        margin-bottom: 1.25rem;
    }

    .form-control {
        border-radius: 30px;
        padding: 0.75rem 1.25rem;
    }

    .btn-login {
        border-radius: 30px;
        padding: 0.6rem 1.25rem;
        width: 100%;
        font-weight: 600;
        background-color: #ff9900;
        border: none;
        color: #fff;
    }

    .form-links a {
        display: block;
        color: #d1e9ff;
        font-size: 0.9rem;
        margin-top: 0.5rem;
        text-decoration: underline;
    }

    .input-label {
        font-size: 0.9rem;
        margin-left: 0.5rem;
    }

    .form-check-label {
        color: #d1e9ff;
    }

    .alert-danger {
        background-color: rgba(255, 0, 0, 0.1);
        color: white;
    }
</style>

<div class="login-container">
    <div class="login-box">
        <div class="login-image">
            <img src="/img/login-illustration.png" alt="Login Illustration" />
        </div>
        <div class="login-form">
            <h2>Welcome!</h2>

            <form id="account" method="post" novalidate>
                <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                <div class="form-group">
                    <label asp-for="Input.Email" class="input-label">Email</label>
                    <input asp-for="Input.Email" class="form-control" autocomplete="username" placeholder="you@example.com" />
                    <span asp-validation-for="Input.Email" class="text-warning"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Input.Password" class="input-label">Password</label>
                    <input asp-for="Input.Password" type="password" class="form-control" autocomplete="current-password" placeholder="••••••••" />
                    <span asp-validation-for="Input.Password" class="text-warning"></span>
                </div>

                <div class="form-check mb-3">
                    <input class="form-check-input" asp-for="Input.RememberMe" id="RememberMe" />
                    <label class="form-check-label" for="RememberMe">
                        @Html.DisplayNameFor(m => m.Input.RememberMe)
                    </label>
                </div>

                <button id="login-submit" type="submit" class="btn btn-login">Sign in</button>

                <div class="form-links mt-3">
                    <a id="forgot-password" asp-page="./ForgotPassword">Forgot your password?</a>
                    <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Create account</a>
                    <a id="resend-confirmation" asp-page="./ResendEmailConfirmation">Resend email confirmation</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
