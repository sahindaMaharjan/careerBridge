@page
@model LogoutModel
@{
    ViewData["Title"] = "Log Out";
    ViewData["HideNavbar"] = true; // Hides navbar in layout
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card shadow-sm border-0">
                <div class="card-body p-4 text-center">
                    <h3 class="card-title text-primary fw-bold mb-3">@ViewData["Title"]</h3>

                    @if (User.Identity?.IsAuthenticated ?? false)
                    {
                        <p class="text-muted mb-4">Are you sure you want to log out?</p>
                        <form class="d-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/", new { area = "" })" method="post">
                            <button type="submit" class="btn btn-danger px-4">Log Out</button>
                        </form>
                    }
                    else
                    {
                        <div class="alert alert-success mt-3" role="alert">
                            You have successfully logged out of the application.
                        </div>
                        <a class="btn btn-primary mt-3 px-4" asp-area="Identity" asp-page="/Account/Login">Return to Login</a>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
