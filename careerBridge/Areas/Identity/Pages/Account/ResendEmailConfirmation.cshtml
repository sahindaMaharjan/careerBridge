@page
@model ResendEmailConfirmationModel
@{
    ViewData["Title"] = "Resend Email Confirmation";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-5">
            <div class="card shadow-sm border-0">
                <div class="card-body p-4">
                    <h3 class="card-title text-center mb-4 text-primary fw-bold">@ViewData["Title"]</h3>
                    <p class="text-center text-muted mb-4">Enter your registered email to receive a new confirmation link.</p>

                    <form method="post" novalidate>
                        <div asp-validation-summary="All" class="text-danger mb-3" role="alert"></div>

                        <div class="form-floating mb-3">
                            <input asp-for="Input.Email" class="form-control" aria-required="true" placeholder="name@example.com" />
                            <label asp-for="Input.Email">Email address</label>
                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                        </div>

                        <button type="submit" class="btn btn-primary w-100">Resend Confirmation</button>
                    </form>
                </div>
            </div>

            <div class="text-center mt-3">
                <a asp-page="/Account/Login" class="text-decoration-none text-muted">Back to Login</a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
